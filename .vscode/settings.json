{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__debug_bin": true
  },
  "editor.formatOnSave": true,
  "editor.foldingStrategy": "indentation",
  "files.insertFinalNewline": true,
  "files.autoSave": "onWindowChange",
  "go.testFlags": [
    "-v",
    "-count=1"
  ],
  "go.testEnvVars": {
    "GOMMERCE_CONFIG_PATH": "${workspaceFolder}/config/example.yaml"
  }
}
